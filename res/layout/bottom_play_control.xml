<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:baselineAligned="false"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="#2f2f39" >

    <RelativeLayout
        android:id="@+id/btnMusicPlay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:paddingTop="5dp"
        android:paddingBottom="5dp">

        <ImageView
            android:id="@+id/icon_Song"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="7dp"
            android:src="@drawable/icon_def_music" />
        <TextView
            android:id="@+id/btm_song_name"
            android:layout_alignTop="@+id/icon_Song"
            android:layout_toRightOf="@+id/icon_Song"
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="后悔无期"
            android:maxEms="8"
            android:textSize="12sp"
            android:textColor="#ffffff"
            />
        <TextView
            android:id="@+id/btm_player_name"
            android:layout_alignLeft="@+id/btm_song_name"
            android:layout_below="@+id/btm_song_name"
            android:layout_marginTop="1.5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="邓紫棋"
            android:maxEms="8"
            android:textSize="10sp"
            android:textColor="#ffffff"
            />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.5">
        <ImageView
            android:id="@+id/ivPlayList"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/icon_playlist"/>
        <ImageView
            android:id="@+id/ivPlay"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/icon_play"/>
        <ImageView
            android:id="@+id/ivPause"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:visibility="gone"
            android:src="@drawable/icon_pause"/>
        <ImageView
            android:id="@+id/ivNext"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/icon_next"/>
        
    </LinearLayout>

</LinearLayout>